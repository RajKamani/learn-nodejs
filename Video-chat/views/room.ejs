<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= roomId %></title>
  </head>
  <script
    src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"
    defer
  ></script>
  <script src="/socket.io/socket.io.js" defer></script>

  <script>
    const ROOM = "<%= roomId %>";
  </script>

  <style>
    #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 300px);
      grid-auto-rows: 300px;
    }
    video {
      height: 100%;
      width: 100%;
      object-fit: cover;
    }
    .msgdiv {
      margin: auto;
      width: 50%;
      border: 3px solid green;
      padding: 10px;
    }
  </style>
  <body>
    <div id="video-grid"></div>
    <div class=".main__mute_button">
      <p id="lable"></p>
      <button id="control">Mute</button>
      <button id="VidControl">Stop Video</button>
      <button id="CC">CC Disabled</button>
    </div>
    <div class="msgdiv">
      <input type="text" id="msg" placeholder="enter msg" />
      <input type="button" value="Send" id="submit" />
      <div id="allmsg"></div>
    </div>
    <div class="container" style="margin: 20px">
      <textarea
        class="form-control"
        id="textarea"
        cols="30"
        rows="10"
      ></textarea>
    </div>
  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="script.js" defer></script>
</html>
